<div class="exp-video-preview">
    <div class="vertical-pad"></div>

    <div class="row exp-text" id="exp-lookit-preview-container">

        <div class="row recorder-container video-recorder-hidden">
            <div id="recorder" class="col-xs-12">
            </div>
        </div>

        <div class="col-md-8 col-md-offset-2">
            {{#unless prompt}}
                {{currentVideo.caption}}
                <br> <br>
            {{else}}
                {{text}}
                <br> <br>
                <button class="btn btn-success btn-block" disabled={{disableRecord}} {{action 'accept'}}>{{prompt}}</button>
                <hr>
            {{/unless}}
        </div>


        {{#unless prompt}}

            <div class="row">
                <div class="col-md-10 col-md-offset-1 text-center">
                    {{#if currentVideo.imgSrc}}

                        <img class="exp-lookit-preview-video" style="width: 100%;" src={{currentVideo.imgSrc}} alt="Video preview">

                    {{else}}

                        <video class="exp-lookit-preview-video" controls style="width: 100%;">
                            {{#each currentVideo.sources as |source|}}
                                <source src={{source.src}} type={{source.type}}>
                            {{/each}}
                            Your browser does not support the video tag.
                        </video>

                    {{/if}}
                </div>
            </div>

        {{/unless}}

    </div>

    {{#unless prompt}}
        <div class="row exp-controls">
            <div class="col-md-12 text-center">
                {{!--<button class="btn btn-default pull-left" {{action 'next'}}>End preview</button>--}}
                <button disabled={{noPrev}} {{action 'previousVideo'}} class="btn btn-primary pull-left">
                    Previous video
                </button>
                {{#if noNext}}
                    <button {{action 'finish'}} class="btn btn-success pull-right"> Continue</button>
                {{else}}
                    <button {{action 'nextVideo'}} class="btn btn-success pull-right"> Next video</button>
                {{/if}}
            </div>
        </div>

    {{/unless}}

</div>